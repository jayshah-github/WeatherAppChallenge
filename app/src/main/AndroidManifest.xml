<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jayapps.hello.weatherappchallenge">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/sun"
        android:label="MyWeatherApp"
        android:roundIcon="@drawable/sun"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DetailDay"></activity>
        <activity android:name=".LondonActivity"></activity>
        <activity android:name=".NewyorkActivity"></activity>
        <activity android:name=".ParisActivity"></activity>
    </application>

</manifest>